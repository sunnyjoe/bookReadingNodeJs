<html>
<link rel="stylesheet" type="text/css" href="css?name=table.css">

   <body>
<center>
         <div id="header" class="headerBgimg">
           <button type="button" class="topleftcorner" onclick="openhome()"> 主页 </button>
         <h2>添加图书</h2>
       </div>


        <div class="content">
         <input type="text" id = "name" placeholder="书名" >
         <br><br>

         <input type="text" id = "author" placeholder="作者" >
         <br><br>
         <input type="number" id="count" min="1" placeholder="数量">
         <br><br>

         <textarea rows="5" cols="50" id = "desc" placeholder="简介"> </textarea>
         <br>
         <br>
         <br>
         <button type="button" onclick="loadDoc()">确定添加</button>
         <br>
      </div>


      <script>
       function loadDoc() {
             var bookName = document.getElementById("name").value
             var author = document.getElementById("author").value
             var desc = document.getElementById("desc").value
             var count = document.getElementById("count").value

             var xhttp = new XMLHttpRequest();
             xhttp.onreadystatechange = function() {
               if (this.readyState == 4 && this.status == 200) {
                 alert("添加成功");
                 window.history.back();
               }
             };
             xhttp.open("GET", "insertbook?name="+bookName+"&author="+author+"&desc="+desc+"&count="+count, true);
             xhttp.send()
      }

      function openhome() {
        window.location.href = "/";
      }

      </script>

   </body>
</html>
