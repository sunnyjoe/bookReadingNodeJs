<html>
<style>
header{
   float:center;
   text-align:center;
}

div {
float:middle;
}

 input[type="text"]
 {
     width: 230px;
     height: 35px;
     border: 1px solid #CCC;
     font-size:17px;
 }

 input[type="number"]
 {
     width: 100px;
     height: 30px;
     border: 1px solid #CCC;
     font-size:17px;
 }


  textarea
  {
      width: 400px;
      height: 200px;
      border: 1px solid #CCC;
      font-size:17px;
  }


</style>

   <body>
<center>
       <div id="first">
         <h2>添加图书</h2>

         <input type="text" id = "name" placeholder="书名" >
         <br><br>

         <input type="text" id = "author" placeholder="作者" >
         <br><br>
         <input type="number" id="count" min="1" placeholder="数量">
         <br><br>

         <textarea rows="5" cols="50" id = "desc" placeholder="简介"> </textarea>
         <br>
         <br>
         <br>
         <button type="button" style="height:28px;width:80px" onclick="loadDoc()">确定添加</button>
         <br>

      </div>


      <script>
       function loadDoc() {
             var bookName = document.getElementById("name").value
             var author = document.getElementById("author").value
             var desc = document.getElementById("desc").value
             var count = document.getElementById("count").value

             var xhttp = new XMLHttpRequest();
             xhttp.onreadystatechange = function() {
               if (this.readyState == 4 && this.status == 200) {
                 alert("添加成功");
                 window.history.back();
               }
             };
             xhttp.open("GET", "insertbook?name="+bookName+"&author="+author+"&desc="+desc+"&count="+count, true);
             xhttp.send()
      }

      </script>

   </body>
</html>
